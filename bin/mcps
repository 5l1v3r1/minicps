#!/usr/bin/python2

import click

import os
import minicps.ui.commands as mcps

# vim: ft=python

@click.group()
def main():
    pass

@main.command()
@click.option('--config', default="default", help="configuration file for generating template.")
def init(config):
    init = mcps.Init(os.getcwd())
    init.make(config)

if __name__=="__main__":
    main()
